@model IEnumerable<AspWebProgramming.Data.Randevu>

    @{
        ViewData["Title"] = "Randevu Listesi";
    }
    <style>
        body{
            background-color: #1a4d87;
        }
        .table {
    border-collapse: collapse;
    width: 100%;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    background-color: #ddd;
}

.table th, .table td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
}

.table th {
    background-color: #4CAF50;
    color: white;
}

.table tr:nth-child(even) {
    background-color: #f2f2f2;
}

.table tr:hover {
    background-color: #ddd;
}

.btn-primary {
    background-color: blue;
    color: white;
    padding: 10px 20px;
    text-decoration: none;
    border: none;
    border-radius: 4px;
}

.btn-primary:hover {
    background-color: darkblue;
}

.btn-danger {
    background-color: red;
    color: white;
    padding: 10px 20px;
    text-decoration: none;
    border: none;
    border-radius: 4px;
}

.btn-danger:hover {
    background-color: darkred;
}
    </style>
    
    <table class="table">
        <thead>
            <tr>
                <th>@_localization.GetKey("Doktor Adı")</th>
                <th>@_localization.GetKey("Adı")</th>
                <th>@_localization.GetKey("Randevu Tarihi")</th>
                <th>@_localization.GetKey("Randevu Saati")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var randevu in Model)
            {
                <tr>
                    <td>@randevu.Doktor.DoktorAdSoyad</td>
                    <td>@randevu.Hasta.HastaAd</td>
                    <td>@randevu.RandevuTarih.ToString("dd.MM.yyyy")</td>
                    <td>@randevu.RandevuSaati.ToString(@"hh\:mm")</td>
                    <td>
                        @if (ViewData["UserRole"] as string == "Admin" || ViewData["UserRole"] as string == "Hasta")
                        {
                            <a asp-controller="Randevu" asp-action="Edit" asp-route-id="@randevu.RandevuId" class="btn btn-primary">@_localization.GetKey("Düzenle")</a>
                            <a class="btn btn-danger" href="javascript:void(0)" onclick="confirmDelete('@randevu.RandevuId')">@_localization.GetKey("Sil")</a>
                        }

                    </td>
                </tr>
               
            }
        </tbody>
    </table>
    @section Scripts {
        <script>
            function confirmDelete(id) {
                if(confirm("Bu Randevuyu silmek istediğinize emin misiniz?")) {
                    window.location.href = '/Randevu/Delete/' + id;
                }
            }
        </script>
    }